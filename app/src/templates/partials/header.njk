<header class="header-bar" id="header">
  <div class="sizefix centered clearfix">
    <nav class="left-aligned">
      <div class="header-bar-logo-container">
        <div class="header-bar-logo"><a id="home" href="/index.html">PL</a></div>
      </div>
    </nav>
    <nav class="right-aligned">
      <ul class=header-bar-nav>
        {% for item in navItems %}
        <li><a id="{{ item.menu_item | lower}}" href="/{{item.href | lower | replace(" ", "")}}" class="header-bar-nav-item {% if page_title == item.menu_item %}-active{% endif %}">{{item.menu_item}}</a></li>{% endfor %}
      </ul>
    </nav>
  </div>
</header>
