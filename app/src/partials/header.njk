{% macro header(color, navItems) %}
<header class="header-bar {{ color }}">
  <div class="wrap-1 sf-1 header-bar_content ">
    <a href="/" class="header-bar_logo">Patrik Lau</a>
    <nav class="header-bar_nav">
      <ul class="header-bar_nav-list">
        {% for item in navItems %}
        <li><a id="{{ item.menu_item | lower }}" href="/{{ item.href | lower | replace(" ", "") }}" class="header-bar_nav-item {% if page_title == item.menu_item %}-active{% endif %}">{{item.menu_item}}</a></li>{% endfor %}
      </ul>
    </nav>
  </div>
</header>
{% endmacro %}
